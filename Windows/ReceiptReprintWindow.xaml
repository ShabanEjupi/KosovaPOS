        <!-- Filter Section -->
        <Border Grid.Row="1" Style="{StaticResource ModernCard}" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="ðŸ” Filtro faturat" FontSize="16" FontWeight="SemiBold" 
                           Foreground="{StaticResource PrimaryColor}" Margin="0,0,0,10"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
