                </Grid>
            </StackPanel>
        </Border>
        
        <!-- Receipts DataGrid with Multi-Select -->
        <Border Grid.Row="2" Style="{StaticResource ModernCard}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
