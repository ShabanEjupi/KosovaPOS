<Window x:Class="KosovaPOS.Windows.ArticlesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource Articles}" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        KeyDown="Window_KeyDown">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Menu Bar -->
        <Menu Grid.Row="0">
            <MenuItem Header="{DynamicResource Articles}">
                <MenuItem Header="{DynamicResource ListOfArticles}" Click="ListOfArticles_Click"/>
                <MenuItem Header="{DynamicResource Tickets}"/>
                <MenuItem Header="{DynamicResource UnitOfMeasurement}"/>
                <MenuItem Header="{DynamicResource Category}"/>
                <MenuItem Header="{DynamicResource POSCategories}"/>
                <MenuItem Header="{DynamicResource TaxTariffs}"/>
                <MenuItem Header="{DynamicResource ArticleTypes}"/>
                <MenuItem Header="{DynamicResource StockCondition}"/>
                <MenuItem Header="{DynamicResource InOutArticlesCard}"/>
                <MenuItem Header="{DynamicResource ListOf0Articles}"/>
                <MenuItem Header="{DynamicResource ArticlesBySupplier}"/>
            </MenuItem>
            <MenuItem Header="{DynamicResource Registry}">
                <MenuItem Header="{DynamicResource ListOfRegistry}"/>
                <MenuItem Header="{DynamicResource EditingRegistry}"/>
            </MenuItem>
        </Menu>
        
        <!-- Articles Grid -->
        <DataGrid x:Name="ArticlesDataGrid" Grid.Row="1" 
                  Style="{StaticResource EnterpriseDataGrid}"
                  Margin="10"
                  CanUserSortColumns="True"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="{DynamicResource Barcode}" Binding="{Binding Barcode}" Width="120"/>
                <DataGridTextColumn Header="{DynamicResource ArticleName}" Binding="{Binding Name}" Width="2*"/>
                <DataGridTextColumn Header="{DynamicResource Unit}" Binding="{Binding Unit}" Width="100"/>
                <DataGridTextColumn Header="{DynamicResource Pack}" Binding="{Binding Pack, StringFormat=F2}" Width="100"/>
                <DataGridTextColumn Header="{DynamicResource SalesPrice}" Binding="{Binding SalesPrice, StringFormat=F2}" Width="120"/>
                <DataGridTextColumn Header="{DynamicResource Category}" Binding="{Binding Category}" Width="150"/>
                <DataGridTextColumn Header="{DynamicResource Supplier}" Binding="{Binding Supplier}" Width="200"/>
                <DataGridTextColumn Header="Stoku" Binding="{Binding StockQuantity, StringFormat=F2}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- Button Bar -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- First row of buttons -->
            <WrapPanel Grid.Row="0" Margin="0,0,0,10">
                <Button x:Name="AddButton" Content="{DynamicResource AddNewArticle}" 
                        Style="{StaticResource EnterpriseButton}" Width="180" Margin="0,0,5,0"
                        Background="#4CAF50" Foreground="White"
                        Click="AddButton_Click"/>
                <Button x:Name="EditButton" Content="{DynamicResource EditArticle}" 
                        Style="{StaticResource EnterpriseButton}" Width="180" Margin="0,0,5,0"
                        Background="#FF9800" Foreground="White"
                        Click="EditButton_Click"/>
                <Button x:Name="DeleteButton" Content="{DynamicResource DeleteArticle}" 
                        Style="{StaticResource EnterpriseButton}" Width="180" Margin="0,0,5,0"
                        Background="#F44336" Foreground="White"
                        Click="DeleteButton_Click"/>
                <Button x:Name="RefreshButton" Content="{DynamicResource RefreshList}" 
                        Style="{StaticResource EnterpriseButton}" Width="180" Margin="0,0,5,0"
                        Background="#2196F3" Foreground="White"
                        Click="RefreshButton_Click"/>
            </WrapPanel>
            
            <!-- Second row of buttons -->
            <WrapPanel Grid.Row="1" VerticalAlignment="Center">
                <Button x:Name="PrintListButton" Content="{DynamicResource PrintList}" 
                        Style="{StaticResource EnterpriseButton}" Width="180" Margin="0,0,5,0"
                        Click="PrintListButton_Click"/>
                <Button x:Name="ExcelButton" Content="{DynamicResource ExportToExcel}" 
                        Style="{StaticResource EnterpriseButton}" Width="180" Margin="0,0,5,0"
                        Click="ExcelButton_Click"/>
                <Button x:Name="BarcodeButton" Content="{DynamicResource PrintBarcode}" 
                        Style="{StaticResource EnterpriseButton}" Width="180" Margin="0,0,5,0"
                        Click="BarcodeButton_Click"/>
                
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,10,0">
                    <TextBlock Text="Kopje: " VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox x:Name="BarcodeCopiesTextBox" Width="60" Text="1" 
                             VerticalContentAlignment="Center" 
                             PreviewTextInput="BarcodeCopiesTextBox_PreviewTextInput"/>
                </StackPanel>
                
                <Button x:Name="CloseButton" Content="{DynamicResource Close}" 
                        Style="{StaticResource EnterpriseButton}" Width="150"
                        Click="CloseButton_Click"/>
            </WrapPanel>
        </Grid>
    </Grid>
</Window>
