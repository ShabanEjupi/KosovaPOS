<Window x:Class="KosovaPOS.Windows.ArticleEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Artikulli" Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="{DynamicResource Barcode}" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="BarcodeTextBox" Height="35" FontSize="14"/>
                
                <TextBlock Text="{DynamicResource ArticleName}" FontWeight="Bold" Margin="0,15,0,5"/>
                <TextBox x:Name="NameTextBox" Height="35" FontSize="14"/>
                
                <TextBlock Text="{DynamicResource Unit}" FontWeight="Bold" Margin="0,15,0,5"/>
                <TextBox x:Name="UnitTextBox" Text="Copë" Height="35" FontSize="14"/>
                
                <TextBlock Text="{DynamicResource Pack}" FontWeight="Bold" Margin="0,15,0,5"/>
                <TextBox x:Name="PackTextBox" Text="1" Height="35" FontSize="14"/>
                
                <TextBlock Text="Çmimi i Blerjes" FontWeight="Bold" Margin="0,15,0,5"/>
                <TextBox x:Name="PurchasePriceTextBox" Text="0.00" Height="35" FontSize="14"/>
                
                <TextBlock Text="{DynamicResource SalesPrice}" FontWeight="Bold" Margin="0,15,0,5"/>
                <TextBox x:Name="SalesPriceTextBox" Text="0.00" Height="35" FontSize="14"/>
                
                <TextBlock Text="{DynamicResource VAT}" FontWeight="Bold" Margin="0,15,0,5"/>
                <ComboBox x:Name="VATRateComboBox" Height="35" SelectedIndex="0">
                    <ComboBoxItem Content="18% (Standard)"/>
                    <ComboBoxItem Content="8% (I Reduktuar)"/>
                </ComboBox>
                
                <TextBlock Text="{DynamicResource Category}" FontWeight="Bold" Margin="0,15,0,5"/>
                <TextBox x:Name="CategoryTextBox" Height="35" FontSize="14"/>
                
                <TextBlock Text="{DynamicResource Supplier}" FontWeight="Bold" Margin="0,15,0,5"/>
                <TextBox x:Name="SupplierTextBox" Height="35" FontSize="14"/>
                
                <TextBlock Text="Sasia në Stok" FontWeight="Bold" Margin="0,15,0,5"/>
                <TextBox x:Name="StockQuantityTextBox" Text="0" Height="35" FontSize="14"/>
                
                <TextBlock Text="Stoku Minimal" FontWeight="Bold" Margin="0,15,0,5"/>
                <TextBox x:Name="MinimumStockTextBox" Text="0" Height="35" FontSize="14"/>
            </StackPanel>
        </ScrollViewer>
        
        <WrapPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="SaveButton" Content="{DynamicResource Save}" 
                    Width="120" Height="40" Margin="10"
                    Background="#4CAF50" Foreground="White"
                    FontWeight="Bold" Cursor="Hand"
                    Click="SaveButton_Click"/>
            <Button x:Name="CancelButton" Content="{DynamicResource Cancel}" 
                    Width="120" Height="40" Margin="10"
                    Background="#F44336" Foreground="White"
                    FontWeight="Bold" Cursor="Hand"
                    Click="CancelButton_Click"/>
        </WrapPanel>
    </Grid>
</Window>
